<div class="d-flex aling-items-center justify-content-center">
    <h1> Tweets </h1>
</div>


<% if Current.user.twitter_accounts.none? %>
        <div class="text-center">
            <div class="col-md-auto  mt-5">
                    <h2>Sorry not connected to any account😢</h2>
                    <h3>Please click the button below to connect</h3>
                </div>
            <div class="col-md-auto mt-5 ">
                <%= button_to "Connect Twitter Account 🎈", "/auth/twitter", method: :post, data: {turbo: "false"} ,class: "btn btn-primary" %>
            </div>
        </div>
<% end %>

<% if Current.user.twitter_accounts.any? %>
    <div class="container">

            <div class="col-md-auto mt-5 d-flex align-items-center justify-content-center">
                 <%= link_to "New Tweet 📝", new_tweet_path, class: "btn btn-primary"%>
            </div>
        <div class="row justify-content-md-center">
            <%= render @tweets %>
        </div>
    </div>
<% end %>